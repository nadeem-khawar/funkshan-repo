{
    "name": "funkshan-api",
    "version": "1.0.0",
    "description": "Funkshan API server built with Fastify and TypeScript",
    "main": "dist/server.js",
    "scripts": {
        "build": "tsc",
        "dev": "tsx watch src/server.ts",
        "start": "node dist/server.js",
        "clean": "rimraf dist",
        "lint": "eslint src --ext .ts",
        "lint:fix": "eslint src --ext .ts --fix",
        "format": "prettier --write src/**/*.ts",
        "type-check": "tsc --noEmit"
    },
    "keywords": [
        "fastify",
        "api",
        "typescript",
        "server"
    ],
    "author": "",
    "license": "ISC",
    "dependencies": {
        "@fastify/bearer-auth": "^10.1.1",
        "@fastify/cors": "^11.1.0",
        "@fastify/csrf-protection": "^7.1.0",
        "@fastify/env": "^5.0.3",
        "@fastify/helmet": "^13.0.2",
        "@fastify/jwt": "^10.0.0",
        "@fastify/rate-limit": "^10.3.0",
        "@fastify/sensible": "^6.0.3",
        "@fastify/swagger": "^9.5.2",
        "@fastify/swagger-ui": "^5.2.3",
        "@fastify/throttle": "^3.0.2",
        "@funkshan/api-contracts": "workspace:*",
        "@funkshan/database": "workspace:*",
        "@funkshan/messaging": "workspace:*",
        "@funkshan/utils": "workspace:*",
        "fastify": "^5.6.1",
        "fastify-plugin": "^5.1.0",
        "pino": "^10.1.0",
        "pino-pretty": "^13.1.2",
        "zod-to-json-schema": "^3.24.6"
    },
    "devDependencies": {
        "@eslint/js": "^9.15.0",
        "@types/node": "^22.0.0",
        "@typescript-eslint/eslint-plugin": "^8.15.0",
        "@typescript-eslint/parser": "^8.15.0",
        "eslint": "^9.15.0",
        "rimraf": "^6.0.1",
        "tsx": "^4.19.2",
        "typescript": "^5.6.0"
    }
}
