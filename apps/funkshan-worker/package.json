{
    "name": "funkshan-worker",
    "version": "1.0.0",
    "description": "Background worker for processing async jobs from RabbitMQ queues",
    "main": "dist/index.js",
    "scripts": {
        "build": "tsc",
        "dev": "tsx watch src/index.ts",
        "start": "node dist/index.js",
        "clean": "rimraf dist",
        "lint": "eslint src --ext .ts",
        "lint:fix": "eslint src --ext .ts --fix",
        "format": "prettier --write src/**/*.ts",
        "type-check": "tsc --noEmit"
    },
    "keywords": [
        "worker",
        "rabbitmq",
        "background-jobs",
        "queue"
    ],
    "author": "",
    "license": "ISC",
    "dependencies": {
        "@funkshan/database": "workspace:*",
        "@funkshan/email": "workspace:*",
        "@funkshan/messaging": "workspace:*",
        "@funkshan/utils": "workspace:*",
        "dotenv": "^17.2.3",
        "pino": "^10.1.0",
        "pino-pretty": "^13.1.2"
    },
    "devDependencies": {
        "@eslint/js": "^9.15.0",
        "@types/node": "^22.0.0",
        "@typescript-eslint/eslint-plugin": "^8.15.0",
        "@typescript-eslint/parser": "^8.15.0",
        "eslint": "^9.15.0",
        "rimraf": "^6.0.1",
        "tsx": "^4.19.2",
        "typescript": "^5.6.0"
    }
}
