{
  "name": "funkshan-repo",
  "version": "1.0.0",
  "description": "Funkshan monorepo workspace",
  "private": true,
  "scripts": {
    "build": "pnpm -r build",
    "dev": "concurrently \"pnpm dev:web\" \"pnpm dev:api\" --names \"web,api\" --prefix-colors \"cyan,yellow\"",
    "dev:all": "pnpm -r dev",
    "dev:web": "pnpm --filter funkshan-web dev",
    "dev:api": "pnpm --filter funkshan-api dev",
    "start": "concurrently \"pnpm start:web\" \"pnpm start:api\" --names \"web,api\" --prefix-colors \"cyan,yellow\"",
    "start:web": "pnpm --filter funkshan-web start",
    "start:api": "pnpm --filter funkshan-api start",
    "build:web": "pnpm --filter funkshan-web build",
    "build:api": "pnpm --filter funkshan-api build",
    "lint": "pnpm -r lint",
    "lint:fix": "pnpm -r lint:fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "format:workspace": "pnpm -r format",
    "clean": "pnpm -r clean",
    "test": "pnpm -r test",
    "type-check": "pnpm -r type-check",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "pnpm build && changeset publish"
  },
  "keywords": [
    "monorepo",
    "pnpm",
    "workspace"
  ],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.18.3",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "prettier": "^3.6.2",
    "concurrently": "^9.1.0"
  }
}
